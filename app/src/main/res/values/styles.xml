<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="start_buttons_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/start_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryExtraDark</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="descriptions">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="medium_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="big_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/xxl_text</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="prepare_fragment_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:textColor">@color/colorPrimaryExtraDark</item>
    </style>

    <style name="customize_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">@color/colorPrimaryExtraDark</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/circle</item>
    </style>

    <style name="cust_label_shortcuts">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/colorPrimaryExtraDark</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/circle</item>
    </style>

    <style name="customize_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/label_size</item>
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dialog_titles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="song_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="song_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/grey</item>
    </style>

</resources>
